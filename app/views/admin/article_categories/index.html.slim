- content_for(:page_title, 'Listing of Article categories')

a.btn.btn-primary href="#{new_admin_article_category_path}"
  span.glyphicon.glyphicon-plus
  |  New hyip category
br
br
br

table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap cellspacing="0" width="100%"
  thead
    tr
      th Name
      th.nosort

  tbody
    - @categories.each do |category|
      tr
        th = category.name
        th.text-center
          a href="#{edit_admin_article_category_path(category)}"
            span.glyphicon.glyphicon-pencil
          a.col-md-offset-4 data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="#{admin_article_category_path(category)}"
            span.glyphicon.glyphicon-trash

- content_for(:javascript) do
  coffee:
    $ -> $('#datatable-responsive').DataTable({
      'aoColumnDefs': [{
          'bSortable': false,
          'aTargets': ['nosort']
      }]
    })

