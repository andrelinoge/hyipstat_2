- content_for(:page_title, 'Listing of Articles')

a.btn.btn-primary href="#{new_admin_article_path}"
  span.glyphicon.glyphicon-plus
  |  New Article
br
br
br

table#datatable-responsive.table.table-striped.table-bordered.dt-responsive.nowrap cellspacing="0" width="100%"
  thead
    tr
      th Tile
      th Reviews
      th Comments
      th Last comment was
      th Archive
      th.nosort

  tbody
    - @resources.each do |resource|
      tr
        th = resource.title
        th = resource.reviews
        th = resource.comments_count
        th = resource.last_commented_at
        th = resource.archive
        th.text-center
          a href="#{send("edit_admin_#{resource.class.to_s.underscore}_path", resource)}"
            span.glyphicon.glyphicon-pencil
          a.col-md-offset-4 data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="#{send("admin_#{resource.class.to_s.underscore}_path", resource)}"
            span.glyphicon.glyphicon-trash

- content_for(:javascript) do
  coffee:
    $ -> $('#datatable-responsive').DataTable({
      'aoColumnDefs': [{
          'bSortable': false,
          'aTargets': ['nosort']
      }]
    })

